package com.example.demo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.example.repo.ExchangeRepository;

@RestController
public class CurrencyExchangeService {
	
	@Autowired
	private ExchangeRepository exchangeRepository;
	
	@GetMapping("/getExchangeValue")
	public Integer getExchangeValue(@RequestParam(name="currencyTo", required = false) String currencyTo, @RequestParam(name="currencyFrom", required = false) String currencyFrom){
		
		exchangeRepository.findByCurrencyAndCurrencyFrom(from, currencyTo)
		return 0;
	}

}
